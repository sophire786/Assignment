<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"

>
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.assignment.ui.main.fragments.ItemRowViewModel"/>

    </data>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:orientation="vertical"
        app:cardCornerRadius="7dp"
        app:cardElevation="4dp"
    >
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/fab_margin"

        >
            <TextView android:id="@+id/txtTitle"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentTop="true"
                      android:text="@{viewModel.mTittle}"
                      android:textColor="@color/colorPrimary"
                      android:textSize="@dimen/text_size16"
                      android:textStyle="bold"

            />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_below="@+id/txtTitle"
                          android:orientation="horizontal"
                          android:weightSum="1"
            >
                <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"

                                android:layout_weight=".7">
                    <TextView android:id="@+id/txtDesc"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"

                              bind:desc="@{viewModel.mDesc}"
                              android:textColor="@color/colorBlack"
                              android:textSize="@dimen/text_size14"

                    />
                </RelativeLayout>
                <RelativeLayout android:layout_width="0dp" android:layout_height="match_parent"
                                android:layout_weight=".3">
                    <ImageView android:layout_width="@dimen/size_50"
                               android:layout_height="@dimen/size_50"
                               android:layout_alignParentRight="true"
                               app:imageUrl="@{viewModel.imageUrl}"

                    />
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>